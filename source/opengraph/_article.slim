meta property="og:title" content=current_article.title
meta property="og:description" content=current_article.data.description
meta property="og:type" content="article"
meta property="og:image" content=image_sharing_src(current_article.data.image)
meta property="og:url" content=page_url(current_article)
meta property="og:article:author" content=data.contact.name
meta property="og:article:published_time" content=current_article.date.to_date.iso8601
meta property="twitter:site" content=data.social.twitter.username
meta property="twitter:creator" content=data.social.twitter.username
meta property="twitter:card" content="summary_large_image"
- current_article.tags.each do |tag|
  meta property="og:article:section" content=tag.capitalize
