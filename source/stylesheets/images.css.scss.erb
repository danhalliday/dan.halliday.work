.d-background-graphic-light {
  background-image: url("<%= svg_data_uri("d-background-graphic-white.svg") %>");
  background-size: 125vw auto;
}

.d-background-graphic-dark {
  background-image: url("<%= svg_data_uri("d-background-graphic-black.svg") %>");
  background-size: 125vw auto;
}

.d-background-graphic-gold {
  background-image: url("<%= svg_data_uri("d-background-graphic-gold.svg") %>");
  background-size: 125vw auto;
}

.d-icon-home {
  background-image: url("<%= svg_data_uri("d-icon-home.min.svg") %>");
}

.d-icon-top {
  background-image: url("<%= svg_data_uri("d-icon-top.min.svg") %>");
}

.d-icon-feed {
  background-image: url("<%= svg_data_uri("d-icon-feed.min.svg") %>");
}

.d-body {
  @extend .d-background-graphic-light;
}

.d-article-header, .d-footer {
  @extend .d-background-graphic-dark;
}

.d-subscribe {
  @extend .d-background-graphic-gold;
}
