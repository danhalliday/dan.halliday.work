<main>

  <!-- Title & About Me -->

  <div class="item item-intro">

    <header class="item-header">

      <h1 class="item-title">Dan Halliday</h1>
      <p class="item-subtitle">Digital Design &amp; Engineering</p>

    </header>

    <section class="item-description">

      <h2 class="page-outline-only">About Me</h2>

      <p>I’m a designer and software engineer with over ten years’ experience. Below is a small
      selection of my work &mdash; for more projects and information feel free to connect on
      <a href="https://uk.linkedin.com/in/danhalliday">LinkedIn</a>, or take a look at my
      <a href="https://dribbble.com/danhalliday">Dribbble</a> and
      <a href="https://github.com/danhalliday">GitHub</a> profiles.</p>

      <p>If you want my help on a project, or just want to say hello,
      <a href="mailto:hi@danhalliday.com">email</a> is the best way to get hold of me.</p>

    </section>

  </div>

  <!-- Project Descriptions & Images -->

  <section id="projects">

    <h2 class="page-projects-title">
      <span class="page-projects-title-arrow" hidden aria-hidden="true">
        <%= sprockets.find_asset('arrow-down-icon.svg').to_s %> <!-- TODO: Add title to SVG -->
      </span>
      Projects
    </h2>

    <% data.projects.each do |project| %>
    <article id="<%= project.title.parameterize %>" class="item item-count <%= project.title.parameterize %>">

      <%= image_tag("photos/#{project.hero}", class: 'item-hero-image', alt: '', :'aria-hidden' => true, hidden: true) %>

      <header class="item-header">

        <h3 class="item-title"><%= project.title %></h3>
        <p class="item-subtitle"><%= project.subtitle %></p>

      </header>

      <a href="<%= "##{project.title.parameterize}" %>"
         class="item-link" aria-label="Link to this" aria-hidden="true">
        <%= sprockets.find_asset('link-icon.svg').to_s %>
      </a>

      <section class="item-description">

        <h4 class="page-outline-only">Description</h4>
        <%= project.description %>

      </section>

      <section class="item-images">

        <h4 class="page-outline-only">Images</h4>

        <% project.images and project.images.each do |image| %>
        <div class="item-image <%= 'small' if image.small %>" id="<%= image.title.parameterize %>">

          <div class="item-image-links" aria-hidden="true">

            <a href="<%= "##{image.title.parameterize}" %>" class="item-image-link">
              <%= sprockets.find_asset('link-icon.svg').to_s %>
            </a>

          </div>

          <%= image_tag("photos/#{image.source}", alt: image.title) %>

        </div>
        <% end %>

      </section>

    </article>
    <% end %>

  </section>

  <!-- Hire Me & Skills -->

